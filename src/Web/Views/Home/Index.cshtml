<script>
  $('.ico_section_anim').on('inview', function(event, isInView) {
    if (isInView) {
      $(this).find('.anim').addClass('animated')
    } else {
      // element has gone out of viewport
    }
  });

  $('[data-toggle="slide"]').click(function () {
    var target = $(this).data('target');
    $(this).hide();

    $(target).animate({
      height: "toggle",
      opacity: "toggle"
    }, "fast");
  });

  $('._hide_this_form').on('click' ,function(ev) {
    ev.preventDefault();
    $('.ico_section--form').hide();
    $('[data-toggle="slide"]').show()
  });

  $('.form-control').each(function() {
    if ($(this).val() !== '') {
      $(this).addClass('form-control--focus');
    }
  }).change(function(){
    $(this).toggleClass('form-control--focus', $(this).val() !== '');
  });

  $(function() {
    var clipboard = new Clipboard('.copy_code');

    clipboard.on('success', function(e) {
      e.trigger.innerHTML =  '<i class="icon icon--check"></i>';
      e.clearSelection();
    });
  });

  $(document).ready(function () {
    var $form = $('#form_ico');
    $form.validate({
      submitHandler: function(form) {
          $.ajax({
              url: "@Url.Action("Submit")",
              
              type: "post",
              data: $('#form_ico').serialize(),
              
          success: function(response) {
            $form.animate({
              height: "toggle",
              opacity: "toggle"
            });

            var name_val = $('input#name').val();

            $('.success_text')
            .animate({ opacity: "toggle" })
            .find('#person_name').text(name_val);
          }
        });
      }
    });
  });

</script>

